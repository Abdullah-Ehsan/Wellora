@{
    ViewData["Title"] = "Page Not Found";
    Layout = null; // Assuming standalone page, or remove this line to use your main layout
}


<title>@ViewData["Title"] - Wellora</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="~/css/NotFound.css" />

<div class="error-container">

        <div class="error-image-wrapper">
            <img src="~/images/lora_confused.png" alt="404 Error" class="error-char-img">
        </div>

        <h1 class="error-heading">Oops! Page not found.</h1>

        <p class="error-subtext">
            The page you are looking for might have been removed or is temporarily unavailable.
        </p>

        <a href="/" class="btn-home">Go Back Home</a>
</div>
