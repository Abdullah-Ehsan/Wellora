@{
    ViewData["Title"] = "Page Not Found";
    Layout = ViewBag.Layout; // dynamically chosen layout (Doctor, Patient, Admin, or default)
}

@section Styles {
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome (icons) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Your custom error page CSS -->
    <link rel="stylesheet" href="~/css/NotFound.css" />
}



<div class="error-container">
    <div class="error-image-wrapper">
        <img src="~/images/Error/lora_confused.png" alt="404 Error" class="error-char-img">
    </div>

    <h1 class="error-heading">Oops!</h1>
    <p class="error-subtext">@ViewBag.Message</p>

    @if (User.Identity.IsAuthenticated)
    {
        <a href="@Url.Action("Index", "Home", new { area = ViewBag.Area })" class="btn-home">
            Go Back to Dashboard
        </a>
    }
    else
    {
        <a href="/" class="btn-home">Go Back Home</a>
    }
</div>
